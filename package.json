{
  "name": "opencode-mailbox",
  "version": "0.0.7",
  "description": "A simple mailbox system for sending and receiving messages between sessions",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun build ./index.ts --outdir ./dist --target bun && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly",
    "start": "bun run build",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "^1.2.2",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "concurrently": "^9.2.1",
    "electron": "^28.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": "^1.1.25"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "commander": "^14.0.3",
    "dotenv": "^17.2.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-error-boundary": "^6.1.1",
    "yargs": "^18.0.0"
  },
  "keywords": [
    "opencode",
    "plugin",
    "mailbox",
    "messaging"
  ],
  "author": "OpenCode Community",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/richardanaya/opencode-mailbox.git"
  },
  "homepage": "https://github.com/richardanaya/opencode-mailbox#readme",
  "bugs": {
    "url": "https://github.com/richardanaya/opencode-mailbox/issues"
  }
}
